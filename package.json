{
  "name": "react-render-wave",
  "version": "1.0.3",
  "description": "A compact React hook and component for progressive rendering of large datasets with optional scroll virtualization.",
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "unpkg": "dist/index.umd.js",
  "scripts": {
    "build": "tsc && cp dist/index.js dist/index.esm.js"
  },
  "keywords": [
    "react",
    "hooks",
    "virtual-scroll",
    "progressive-rendering",
    "performance"
  ],
  "author": "Christos Dematas",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "typescript": "^5.8.3"
  }
}
